pipeline {
    agent any

    environment {
        SUDO_PASSWORD = credentials('sudopwd') // Use the actual ID of your sudo credentials
    }

    stages {
        stage("Clean Workspace") {
            steps {
                sh 'rm -rf *'
            }
        }

        stage("Git Checkout") {
            steps {
                script {
                    sh "git config --global credential.helper '!f() { echo password=\$SUDO_PASSWORD; }; f'"
                    sh "git clone https://github.com/Emmylong1/Microservice-based-Application.git"
                }
            }
        }

        stage("Maven Build and Test") {
            steps {
                script {
                    sh "mvn clean install -Dskip.unit.tests=false"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'sudopwd', variable: 'SUDO_PASSWORD')]) {
                        sh "echo \$SUDO_PASSWORD | sudo -S docker build -t emmylong1/talentplus-integration ."
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean the workspace after each build
            sh 'rm -rf *'
        }
    }
}
