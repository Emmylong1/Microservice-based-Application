pipeline {
    agent any

    stages {
        stage("Git checkout") {
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/Emmylong1/Microservice-based-Application.git'
                }
            }
        }

        stage("Maven Build") {
            steps {
                sh "mvn clean install"
            }
        }

        stage('UNIT testing') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }

        stage('Integration testing') {
            steps {
                script {
                    sh 'mvn verify -DskipTests=false'
                }
            }
        }

        stage('Helm Deploy') {
            steps {
                script {
                    def helmChart = "microserviceapp"  // Replace with your Helm chart name
                    def releaseName = "springboot"  // Replace with your desired release name
                    def namespace = "helm-deployment"
                    def imageTag = env.BUILD_NUMBER

                    sh "helm upgrade ${releaseName} --install ${helmChart} --namespace ${namespace} --set image.tag=${imageTag}"
                }
            }
        }
    }

    post {
        always {
            sh 'rm -rf *'
        }
    }
}
