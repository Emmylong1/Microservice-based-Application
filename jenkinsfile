pipeline {
    agent any

    stages {
        stage("Git checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/Emmylong1/Microservice-based-Application.git'
            }
        }

        stage("Maven Build") {
            steps {
                sh "mvn clean install"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t emmylong1/talentplus-integration ."
                }
            }
        }
    }

    post {
        always {
            sh 'rm -rf *'
        }
    }
}
