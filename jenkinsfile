pipeline {
    agent any

    stages {
        stage("Clean Workspace") {
            steps {
                sh 'rm -rf *'
            }
        }

        stage("Git checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/Emmylong1/Microservice-based-Application.git'
            }
        }

        stage("Maven Build") {
            steps {
                sh "mvn clean install"
            }
        }

        stage("Unit Testing") {
            steps {
                sh "mvn verify -Dskip.unit.tests"
            }
        }

        stage("Integration Testing") {
            steps {
                sh "mvn clean install"
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'sudo docker build -t emmylong1/talentplus-integration .'
                }
            }
        }
        
        stage('Push Image to Docker Hub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'dockerhub-pwd', variable: 'Emmylong1')]) {
                        sh 'sudo docker login -u emmylong1 -p $Emmylong1'
                    }
                    sh 'sudo docker push emmylong1/talentplus-integration'
                }
            }
        }
    }

    post {
        always {
            // Clean the workspace after each build
            sh 'rm -rf *'
        }
    }
}
