pipeline {
    agent any

    stages {
        stage("Git checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/Emmylong1/Microservice-based-Application.git'
            }
        }

        stage("Maven Build") {
            steps {
                sh "mvn clean install"
            }
        }
         stage('UNIT testing'){
            
            steps{
                
                script{
                    
                    sh 'mvn test'
                }
            }
        }
        stage('Integration testing'){
            
            steps{
                
                script{
                    
                    sh 'mvn verify -DskipUnitTests'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t emmylong1/talentplus-integration ."
                }
            }
        }
    }
     
     stage('identifying misconfigs using datree in helm charts'){
        steps {
            script{
                  dir('microserviceapp') {
                    sh 'helm datree test .'
                  }
            }
        }
     }

    post {
        always {
            sh 'rm -rf *'
        }
    }
}
